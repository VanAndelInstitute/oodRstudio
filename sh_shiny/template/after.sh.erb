# Wait for the RStudio Server to start
shinyport=`cat output.log |grep Listening | awk -F'[:/ ]+' '{print $5}'`
echo listening on $shinyport found

echo "Waiting for shiny Server to open port ${port}..."
if wait_until_port_used "${host}:${port}" 120; then
  echo "Discovered shiny Server listening on port ${port}!"
else
  echo "Timed out waiting for shiny Server to open port ${port}!"
  clean_up 1
fi
sleep 2
